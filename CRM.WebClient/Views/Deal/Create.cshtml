@model CRM.CrmApi.Client.DealCreateDto
@{
    Layout = "~/Views/Workflow/_LayoutWorkflow.cshtml";
    ViewBag.Title = "Создать сделку";
}
<div class="container d-flex align-items-center flex-column mt-5" style="color: white;">
    <h1>Создать сделку</h1>

    <hr />

	<form asp-action="Create" method="post" style="min-width: 500px;">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>

		<div class="form-group row m-3">
			<input asp-for="ManagerId" id="managerId" class="fadeIn second form-control" placeholder="ID пользователя" autofocus />
			<span asp-validation-for="ManagerId" class="text-danger"></span>
		</div>

		<div class="form-group row m-3">
			<select asp-for="CompanyId"
					asp-items="@(new SelectList(ViewBag.Companies, "Value", "Text"))">
				<option>Please select one</option>
			</select>
			<span asp-validation-for="CompanyId" class="text-danger"></span>
		</div>

		<div class="form-group row m-3">
			<input type="datetime-local" asp-for="DateContact" id="dataContact" class="fadeIn second form-control" value="@DateTime.Now" min="@DateTime.Now" />
			<span asp-validation-for="DateContact" class="text-danger"></span>
		</div>


		<div class="d-flex justify-content-center">
			<button class="btn mt-5 btn-success " type="submit">Добавить</button>
		</div>
	</form>

    <hr />

    <div>
        <a class="btn btn-outline-info" asp-action="Index">Назад</a>
    </div>
</div>