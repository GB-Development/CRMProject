@model List<CRM.CrmApi.Client.Company>;

@{
    ViewData["Title"] = "Workflow / Contacts";
    Layout = "~/Views/Workflow/_LayoutWorkflow.cshtml";
}
<div class="content row-col-1 d-flex flex-column align-items-center m-5">
    
    <div class="d-flex col-12">
        <div class="col-4">
            
        </div>
        <h3 class="col-4" style="color: white; text-align: center;">@ViewData["Title"]</h3>
        <div class="col-4" style="text-align: center;">
            
        </div>
    </div>

    <div class="d-flex justify-content-center flex-wrap container m-3">
        
        @if (Model is null || Model.Count == 0)
        {
            <p class="fs-4" style="color: white;">Нет контактов в вашей базе.</p>
        }
        else
        {
            foreach (var company in Model)
            {
                <div class="col-12" style="color: white;">
                    <div class="col-6">
                        Компания: @company.CompanyName
                    </div>
                    <hr />
                    <div class="col-6 mb-3">
                        <a asp-action="Create" asp-route-id="@company.CompanyId" class="btn btn-success">Add New Contact</a>
                    </div>
                </div>
                foreach (var contact in company.Contacts)
                {
                    
                    <div class="card m-1" style="background: rgba(100,100,155, 0.55); min-width: 350px;">
                        <div class="card-body" style="color: white;">
                            <div style="position:absolute; top: 45px; right: 20px; background: #FFFFFF; width: 76px; height: 76px; border-radius: 50%;">
                                <div style="position:relative; top: 3px; left: 3px; background: #D9D9D9; width: 70px; height: 70px; border-radius: 50%;"></div>
                            </div>
                            <h5 class="card-title">@contact.FullName</h5>
                            <p class="card-text m-0" style="max-width: 240px;">
                                Address: @contact.Address
                            </p>
                            <p class="card-text m-0">
                                Email: @contact.Email
                            </p>
                            <p class="card-text">
                                Phone: @contact.PhoneNumber
                            </p>
                            <div class="btn-group col-12">
                                <a asp-action="Edit" asp-route-id="@contact.ContactId" class="btn btn-primary col-6">Edit</a>
                                <a asp-action="Delete" asp-route-id="@contact.ContactId" class="btn btn-danger col-6">Delete</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-12 mb-5"></div>
            }
        }
    </div>
</div>