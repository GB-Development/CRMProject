@model RegistryModel

<div class="container d-flex justify-content-center">
	<div class="main">
		<input type="checkbox" id="chk" aria-hidden="true">

		<div class="signup">
			<form asp-action="Registry" method="post">
				<div class="text-danger" asp-validation-summary="ModelOnly"></div>

				<label for="chk" aria-hidden="true">Sign up</label>

				<div class="form-group">
					<input asp-for="Login" id="login" class="fadeIn second form-control" placeholder="Login" autofocus />
					<span asp-validation-for="Login" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input asp-for="Name" id="name" class="fadeIn second form-control" placeholder="Name" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input asp-for="Email" id="email" class="fadeIn second form-control" placeholder="Email" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input asp-for="Password" id="password" class="fadeIn second form-control" placeholder="Password" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<button type="submit">Sign up</button>
			</form>
		</div>

